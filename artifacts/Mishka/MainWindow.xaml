<Window x:Class="Mishka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mishka" 
        Height="350" Width="400"
        MinHeight="350" MinWidth="350"
        WindowStartupLocation="CenterScreen"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Settings Button -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Mishka" 
                           FontSize="24" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>
            
            <Button Grid.Column="1" 
                    x:Name="btnSettings"
                    Style="{StaticResource GearButtonStyle}"
                    ToolTip="Settings"
                    Click="BtnSettings_Click"/>
        </Grid>
        
        <!-- Main Controls -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            
            <CheckBox x:Name="chkEnableJiggle" 
                      Content="Enable jiggle?"
                      FontSize="16"
                      FontWeight="SemiBold"
                      Foreground="{StaticResource ForegroundBrush}"
                      Margin="0,5,0,10"
                      Checked="ChkEnableJiggle_Checked"
                      Unchecked="ChkEnableJiggle_Unchecked"/>
            
            <CheckBox x:Name="chkZenMode" 
                      Content="Zen jiggle? (virtual mode - cursor stays still)"
                      FontSize="13"
                      Margin="30,0,0,10"
                      IsEnabled="False"
                      Foreground="{StaticResource ForegroundBrush}"
                      Checked="ChkZenMode_Checked"
                      Unchecked="ChkZenMode_Unchecked"/>
            
            <Border Background="{StaticResource HoverBrush}" 
                    CornerRadius="5"
                    Padding="12,10"
                    Margin="0,5,0,0">
                <StackPanel>
                    <TextBlock x:Name="txtStatus" 
                               Text="Status: Stopped"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource ForegroundBrush}"/>
                    <TextBlock x:Name="txtHotkey" 
                               Text="Press Ctrl+Shift+J to hide/show"
                               FontSize="12"
                               Foreground="{StaticResource ForegroundBrush}"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
        </StackPanel>
        
        <!-- Footer with About and Copyright -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <Button x:Name="btnAbout"
                    Content="About Mishka"
                    HorizontalAlignment="Center"
                    Background="Transparent"
                    Foreground="{StaticResource AccentBrush}"
                    Padding="10,5"
                    Margin="0,0,0,10"
                    Click="BtnAbout_Click"/>
            
            <TextBlock Text="Â©Copyright &#x22;iliko&#x22; 2026"
                       Style="{StaticResource CopyrightTextStyle}"/>
        </StackPanel>
        
    </Grid>
</Window>